<%= form_for(@open_studio, html: { class: "form-horizontal", role: "form" }) do |f| %>
  <% if @open_studio.errors.any? %>
    <div class="alert alert-danger alert-dismissable" role="alert">
      <button type="button" class="close" data-dismiss="alert"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
      <h4><%= pluralize(@open_studio.errors.count, "error") %> prohibited this open_studio from being saved:</h4>

      <ul>
      <% @open_studio.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label :name, class: "col-sm-2 control-label" %>
