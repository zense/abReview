<div class="page-header">
  <h1>Listing reviews</h1>
</div>

<div class="table-responsive">
  <table class="table table-striped table-bordered table-hover">
    <thead>
      <tr>
            <th>Abstract doc</th>
            <th>Originality</th>
            <th>Expand</th>
            <th>Impact</th>
            <th>Methods</th>
            <th>Clarity</th>
            <th>Comments</th>
            <th></th>
        <th></th>
      </tr>
    </thead>

    <tbody>
      <%= content_tag_for(:tr, @reviews) do |review| %>
            <td><%= link_to review.abstract_doc.title, edit_review_path(review) %></td>
            <td><%= review.originality %></td>
            <td><%= review.expand %></td>
            <td><%= review.impact %></td>
            <td><%= review.methods %></td>
            <td><%= review.clarity %></td>
            <td><%== review.comments %></td>
            <td><%= link_to 'Show', review %></td>
        <td><%= link_to 'Edit', edit_review_path(review) %></td>
      <% end %>
    </tbody>
  </table>
</div>
