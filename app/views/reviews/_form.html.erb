<%= form_for(@review, html: { class: "form-horizontal", role: "form" }) do |f| %>
  <% if @review.errors.any? %>
    <div class="alert alert-danger alert-dismissable" role="alert">
      <button type="button" class="close" data-dismiss="alert"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
      <h4><%= pluralize(@review.errors.count, "error") %> prohibited this review from being saved:</h4>

      <ul>
      <% @review.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label :abstract_doc, class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.text_field :abstract_doc, value: @review.abstract_doc.title, class: "form-control", disabled: true %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :originality, class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.number_field :originality, class: "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :expand, class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.number_field :expand, class: "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :impact, class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.number_field :impact, class: "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :methods, class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.number_field :methods, class: "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :clarity, class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.number_field :clarity, class: "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :comments, class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.cktext_area :comments, class: "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :status, class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.collection_select(:status, AbstractDoc.statuses.for_select[0..1], :second, :first, value: 0, class: "form-control" )%>
    </div>
  </div>
  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
      <%= f.submit class: "btn btn-primary" %>
    </div>
  </div>
<% end %>
